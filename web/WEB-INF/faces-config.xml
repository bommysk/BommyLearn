<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>student</managed-bean-name>
        <managed-bean-class>Student</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>teacher</managed-bean-name>
        <managed-bean-class>Teacher</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>     
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    <managed-bean>
        <managed-bean-name>cl</managed-bean-name>
        <managed-bean-class>Class</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    <managed-bean>
        <managed-bean-name>schedule</managed-bean-name>
        <managed-bean-class>Schedule</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    <managed-bean>
        <managed-bean-name>assignment</managed-bean-name>
        <managed-bean-class>Assignment</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>newStudent</from-outcome>
            <to-view-id>/newStudent.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>studentLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>teacherLogin</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>student/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>
            /teacherLogin.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>newStudent</from-outcome>
            <to-view-id>/newStudent.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>studentLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>teacherLogin</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>teacher/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>
            /newStudent.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>newStudent</from-outcome>
            <to-view-id>/newStudent.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>studentLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>teacherLogin</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /teacher/index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/teacher/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAssignments</from-outcome>
            <to-view-id>/teacher/createAssignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gradeAssignments</from-outcome>
            <to-view-id>/teacher/gradeAssignments.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /teacher/createAssignments.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/teacher/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAssignments</from-outcome>
            <to-view-id>/teacher/createAssignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gradeAssignments</from-outcome>
            <to-view-id>/teacher/gradeAssignments.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /teacher/gradeAssignments.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/teacher/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/teacherLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAssignments</from-outcome>
            <to-view-id>/teacher/createAssignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gradeAssignments</from-outcome>
            <to-view-id>/teacher/gradeAssignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gradeIndividualAssignment</from-outcome>
            <to-view-id>/teacher/gradeIndividualAssignment.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /student/index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAssignments</from-outcome>
            <to-view-id>/student/assignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewFeedback</from-outcome>
            <to-view-id>/student/view-feedback.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addClasses</from-outcome>
            <to-view-id>/student/add-classes.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
    
    <navigation-rule>
        <from-view-id>
            /student/assignments.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAssignments</from-outcome>
            <to-view-id>/student/assignments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewFeedback</from-outcome>
            <to-view-id>/student/view-feedback.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addClasses</from-outcome>
            <to-view-id>/student/add-classes.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   

</faces-config>
